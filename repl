package test1;

public class rept {

public static void main(String[] args){
System.out.println(repl("good morning",3));
}
	public static String repl(String word, int rept) {
    String concatenation = "";
    
    for (int i = 0; i < rept; i++) {
        concatenation += word;
    }
    
    return concatenation;
}

}
